<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">

    <import resource="userdb-confg.xml"/>

    <!-- defines what service implementation to use for signup -->
    <bean id="signupDelegate" class="com.springUsersAccess.delegate.SignupDelegate">
        <property name="newUserService" ref="newUserService" />
        <property name="passwordService" ref="passwordService" />
        <property name="usernameService" ref="usernameService" />
    </bean>

    <bean id="newUserService" class="com.springUsersAccess.service.impl.NewUserImpl" >
        <property name="userDao" ref="userDao" />
    </bean>

    <!-- TODO: implement using javascript instead of locally on server -->
    <bean id="passwordService" class="com.springUsersAccess.service.impl.AllowAllPasswordsService">
    </bean>
    <bean id="usernameService" class="com.springUsersAccess.service.impl.NoDuplicateUsernameSerivce">
        <property name="userDao" ref="userDao" />
    </bean>

</beans>