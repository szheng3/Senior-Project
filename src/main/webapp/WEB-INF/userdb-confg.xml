<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean name="userDao" class="com.springUsersAccess.dao.impl.UserDaoSQLite">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <bean name="passwordDao" class="com.springUsersAccess.dao.impl.PasswordDaoSQLite">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <!--Note: Within production (ie multithreaded) use DriverManagerDataSource instead of SingleConnectionDataSource-->
    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.SingleConnectionDataSource">
        <property name="driverClassName" value="org.sqlite.JDBC" />
        <property name="url" value="jdbc:sqlite:user_db.sqlite" />
        <property name="username" value="" />
        <property name="password" value="" />
        <property name="suppressClose" value="true"/>
    </bean>

</beans>