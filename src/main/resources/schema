/**
 * File for specifying the current structure of our database
 * Created by: Alex Almanza
 */

CREATE TABLE password
(
  id INTEGER PRIMARY KEY AUTOINCREMENT,
  salt BLOB,
  hash VARCHAR
);
CREATE TABLE sqlite_master
(
  type TEXT,
  name TEXT,
  tbl_name TEXT,
  rootpage INTEGER,
  sql TEXT
);
CREATE TABLE sqlite_sequence
(
  name ,
  seq
);
CREATE TABLE user
(
  username VARCHAR PRIMARY KEY,
  password_ref INTEGER DEFAULT -1 NOT NULL,
  CONSTRAINT user_password_id_fk FOREIGN KEY (password_ref) REFERENCES password (id)
);